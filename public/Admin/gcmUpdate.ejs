        <div class="form-group">
            <div class="row">
                <div class="col-xs-2">
                    <label>*Email:</label>
                </div>
                <div class="col-xs-6">
                    <input type="text" ng-model="newemailid" class="form-control" required>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-xs-2">
                    <label >*Contact No.:</label>
                </div>
                <div class="col-xs-6">
                    <input type="text" ng-model="newmobileno" class="form-control" maxlength="10" minlength="10" required>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-xs-2">
                    <label>Is Management ?  </label>
                </div>
                <div class="col-xs-6">
                        <input type="checkbox" ng-model="newmngmnt">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-7 offset-sm-2">
                    <button type="submit" class="btn btn-outline-primary" id="member-details">Update</button>
                </div>
            </div>
        </div>

    </form>
</div>
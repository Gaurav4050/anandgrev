                    <label id="name
                "> *Name:</label>
                </div>
                <div class="col-xs-6">
                    <input class="form-control" id="name" type="text" ng-model="newname" required>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-xs-2">
                    <label>*Designation:</label>
                </div>
                <div class="col-xs-6">
                    <input type="text" ng-model="newdesignation" class="form-control" required>
                </div>
            </div>
        </div>

